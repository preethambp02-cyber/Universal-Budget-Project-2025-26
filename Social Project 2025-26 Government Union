<script>
const income=[
 {n:"Income Tax",v:1040000,e:"Tax collected from individuals based on their income."},
 {n:"Corporate Tax",v:990000,e:"Tax paid by companies on their profits."},
 {n:"GST",v:1160000,e:"Indirect tax on goods and services across India."},
 {n:"Customs Duty",v:210000,e:"Tax on imported and exported goods."},
 {n:"Non-Tax Revenue",v:350000,e:"Income from fees, dividends, and interest."}
];

const spending=[
 {n:"State Transfers",v:2501284,e:"Funds transferred to states for development."},
 {n:"Interest Payments",v:1276338,e:"Repayment of government borrowings."},
 {n:"Defence",v:491732,e:"Expenditure on national security and armed forces."},
 {n:"Infrastructure",v:548649,e:"Development of roads, railways, and transport."},
 {n:"Social Sector",v:247162,e:"Spending on health, education, and welfare."}
];

/* TRUE DIFFERENT COLOURS (NO SHADES) */
const pieColors=["#e63946","#2a9d8f","#457b9d","#6a4c93","#f4a261"];
const barColors=["#ff006e","#8338ec","#3a86ff","#ffbe0b","#06d6a0"];

let chartType="pie", chart;

function setType(t){chartType=t; updateAll();}

function updateAll(){
 const data = mode.value==="income"?income:spending;
 const total = data.reduce((a,b)=>a+b.v,0);

 summaryTitle.innerText = mode.value==="income"?"Total Government Income":"Total Government Expenditure";
 totalAmount.innerText = "‚Çπ " + total.toLocaleString() + " Crore (100%)";

 breakdown.innerHTML="";
 data.forEach(d=>{
   const percent=((d.v/total)*100).toFixed(2);
   breakdown.innerHTML+=`
   <div class="item">
     <button onclick="this.nextElementSibling.style.display=this.nextElementSibling.style.display==='block'?'none':'block'">
       ${d.n} ‚Äì ‚Çπ${d.v.toLocaleString()} Cr (${percent}%)
     </button>
     <p>${d.e}</p>
   </div>`;
 });

 if(chart) chart.destroy();
 chart=new Chart(document.getElementById("chart"),{
  type:chartType,
  data:{
   labels:data.map(d=>d.n),
   datasets:[{
     data:data.map(d=>d.v),
     backgroundColor:chartType==="pie"?pieColors:barColors
   }]
  },
  options:{
   scales:chartType==="bar"?{y:{ticks:{callback:v=>"‚Çπ"+v.toLocaleString()}}}:{}
  }
 });
}

function toggleAck(){
 ack.style.display=ack.style.display==="block"?"none":"block";
}

updateAll();
</script>

